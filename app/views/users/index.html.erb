<div class="container-fluid">

	<h1>Create a Card</h1>
	<div class="row">
		<div class="col-sm-8">
			<div class="panel panel-default">
			  <div class="panel-heading">
			  	<input ng-model="newCard.question" class="form-control" placeholder="Enter question"></div>
			  <div class="panel-body">
			    <input ng-model="newCard.answer" class="form-control" placeholder="Enter answer">
			  </div>
			</div>
		</div>
		<div class="col-sm-4">
			<button type="submit" class="btn btn-primary" ng-click="createCard()">Create Card</button>
		</div>
	</div>

	<h1>Your Cards</h1>
	<div class="row" ng-repeat="card in deck">
		<div class="col-sm-8">
			<div class="panel panel-default" >
			  <div class="panel-heading">
			    <h3 class="panel-title">{{ card.question }}</h3>
			  </div>
			  <div class="panel-body">
			    {{ card.answer }}
			  </div>
			</div>
		</div>
		<div class="col-sm-4">
			<button type="button" class="btn btn-success">Edit Card</button><br><br>
			<button type="button" class="btn btn-danger">Delete Card</button>
		</div>
	</div>

</div>