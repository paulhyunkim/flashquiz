	<h1>Your Cards</h1>

	<div class="row">
		<div class="col-sm-12">
			<ul class="card-grid">
				<li class="card" ng-repeat="card in deck | filter:searchTerm | orderBy:'created_at':true">
					<div class="panel panel-default">
					  <div class="panel-heading">
					    <h3 class="panel-title">{{ card.question }}</h3>
					  </div>
					  <div class="panel-body">
					    {{ card.answer }}
					  </div>
					</div>
				</li>
			</ul>
		</div>
	</div>


</div>