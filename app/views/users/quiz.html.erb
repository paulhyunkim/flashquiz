<div class="container-fluid">

	<h1>Quiz</h1>

	<div class="row" ng-hide="ready">
		<div class="col-sm-12">
			<h2>Are you ready to take the quiz?</h2>
			<button class="btn btn-primary" ng-click="toggleReady()">Yes</button>
		</div>
	</div>
	
	<div id="quiz" ng-show="ready && !finished">
		<div class="row">
			<div class="col-sm-8">
				<div class="panel panel-default">
				  <div class="panel-heading">
				  	<h3 class="panel-title">{{ currentCard.question }}</h3>
			  	</div>
				  <div class="panel-body">
				    <input ng-model="answer" class="form-control" placeholder="Enter your answer">
				  </div>
				</div>
			</div>
			<div class="col-sm-4">
				<button type="submit" class="btn btn-primary" ng-click="checkAnswer(answer)">Check Answer</button>
			</div>
		</div>
		<h1>You have {{ triesRemaining }} tries remaining.</h1> 
		<h1>{{ timer | number:1 }} seconds</h1>
		<h1>Total score: {{ totalScore.points | number:2 }}/100</h1>
	</div>

	<div ng-show="finished">
		<h1>You are finished!</h1>
		<h1>Your total score is {{ totalScore.points | number:2 }} out of 100.</h1>

		<table class="table">
		  <tr>
		  	<th>User</th>
		  	<th>Score</th>
		  </tr>
		  <tr ng-repeat="score in highScores">
		  	<td>{{ score.username }}</td>
		  	<td>{{ score.points }}</td>
		  </tr>
		</table>

	</div>
	

</div>