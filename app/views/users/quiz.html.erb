<div class="container-fluid">

	<h1>Quiz</h1>
	<div class="row">
		<div class="col-sm-8">
			<div class="panel panel-default">
			  <div class="panel-heading">
			  	<h3 class="panel-title">{{ currentCard.question }}</h3>
		  	</div>
			  <div class="panel-body">
			    {{ currentCard.answer }}
			  </div>
			</div>
		</div>
		<div class="col-sm-4">
			<button type="submit" class="btn btn-primary" ng-click="getNewCard()">Random Card</button>
		</div>
	</div>

</div>