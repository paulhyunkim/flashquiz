<div class="container-fluid">	

	<h1>Create a Card</h1>
	<div class="row">
		<div class="col-sm-8">
			<form role="form">
			  <div class="form-group">

			  	<div class="panel panel-default">
					  <div class="panel-heading">
					  	<input ng-model="newCard.question" class="form-control" placeholder="Enter question">
				  	</div>
					  <div class="panel-body">
					    <input ng-model="newCard.answer" class="form-control" placeholder="Enter answer">
					  </div>
					</div>
					<button type="submit" class="btn btn-primary" ng-click="createCard()">Create Card</button>
			  
			  </div>
			</form>

		</div>
	</div>


	<h1>Your Cards</h1>

	<div class="row">
		<div class="col-sm-12">
			<ul class="card-grid">
				<li class="card" ng-repeat="card in deck | filter:searchTerm | orderBy:'created_at':true">
					<div class="panel panel-default">
					  <div class="panel-heading">
					    <h3 class="panel-title">{{ card.question }}</h3>
					  </div>
					  <div class="panel-body">
					    {{ card.answer }}
					  </div>
					</div>
				</li>
			</ul>
		</div>
	</div>


</div>